<h5 class="header" {{action 'showMenu'}}>{{team.name}}</h5>
{{#if isMenuVisible}}
  <div class="menu">
    <ul class="side-nav">
      <li>{{#link-to 'team.team-members' class='team-members'}}Members{{/link-to}}</li>
      {{#if isCurrentUserTeamOwner}}<li>{{#link-to 'team.manage' class='manage-team'}}Manage team{{/link-to}}</li>{{/if}}
      {{#if isCurrentUserAllowedToLeaveTeam}}<li><a href="#" class="leave-team" {{action 'leaveTeam'}}>Leave <strong>{{team.name}}</strong></a></li>{{/if}}
      <li><a href="#" class="logout" {{action 'logout'}}>Sign out of <strong>{{team.name}}</strong></a></li>
    </ul>
  </div>
{{/if}}
