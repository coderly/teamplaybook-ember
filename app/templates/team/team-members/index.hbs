<h1>Members</h1>

{{#each teamMembership in model}}
  {{team-membership membership=teamMembership message='message' error='error'}}
{{/each}}

<h2>Send an invite</h2>

<form {{action 'createInvite' on='submit'}}>
  <div class="row collapse">
    <div class="large-12 columns">
      <label for="email">E-mail</label>
      {{input type='text' id='email' name='email' value=newInviteEmail}}
    </div>
  </div>
  <div class="row collapse">
    <div class="large-12 columns">
      {{input id='create-membership' class='button' type='submit' value='Send invite' disabled=createInviteActionDisabled}}
    </div>
  </div>
</form>

{{#if showMessage}}
  <p class="message">{{message}}</p>
{{/if}}

{{#if showError}}
  <p class="error">{{errorMessage}}</p>
{{/if}}